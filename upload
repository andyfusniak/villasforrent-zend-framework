#!/bin/bash
echo -n "Deploy LIVE (l), BETA (b), RELEASE-5 (5) :"
read -e DEPLOY

#echo -n "Include DB Schema (y) or (n) :"
#read -e INC_SCHEMA
INC_SCHEMA=y

echo -n "Include MVC Views (y) or (n) :"
read -e INC_MVC_VIEWS

echo -n "Include application images (y) or (n) :"
read -e INC_IMAGES

#echo -n "Include YUI2 Reset-Fonts-Grids (y) or (n) :"
#read -e INC_YUI2
INC_YUI2=y

DEPLOY_SCRIPT=goscript

if [ "$DEPLOY" = "l" ]; then
    DEPLOY_DIR=/var/www/www.holidaypropertyworldwide.com
elif [ "$DEPLOY" = "b" ]; then
    echo "BETA Selected"
    DEPLOY_DIR=/var/www/beta.holidaypropertyworldwide.com
elif [ "$DEPLOY" = "5" ]; then
    echo "RELEASE-5 Selected"
    DEPLOY_DIR=/var/www/release5.holidaypropertyworldwide.com
else
    echo "You must specify an upload mode"
    exit;
fi

echo -e "Cleaning up temp files"
rm -f app.tar
rm -f app.tar.gz

echo -e "Creating code archive"
tar cfp app.tar \
public/.htaccess \
public/.htaccess-beta \
public/index.php \
public/robots.txt \
