if [ "$INC_YUI2" = "y" ]; then
    echo -e "Appending YUI2 reset-fonts-grids directory to archive"
    tar rfhp app.tar public/js/yui2/reset-fonts-grids
fi

echo -e "Compressing archive"
gzip -9 -f app.tar

echo -e "Sending to server..."
#
# upload the archive to the beta server
#
scp -P22 -p app.tar.gz andy@mrgrey.holidaypropertyworldwide.com:$DEPLOY_DIR

echo -e "Running remote process to unbundle the package"
scp -P22 -p -C $DEPLOY_SCRIPT andy@mrgrey.holidaypropertyworldwide.com:$DEPLOY_DIR

echo -e "Running the goscript"
ssh -p22 andy@mrgrey.holidaypropertyworldwide.com $DEPLOY_DIR/$DEPLOY_SCRIPT $DEPLOY_DIR

echo -e "Removing the goscript"
ssh -p22 andy@mrgrey.holidaypropertyworldwide.com rm $DEPLOY_DIR/$DEPLOY_SCRIPT

echo -e "Cleaning up local files"
rm -f app.tar.gz

echo -e "Completed"
