<?php $numberAwaitingApproval = count($this->propertyRowset) ?>
<?php if (0 === $numberAwaitingApproval) : ?>
<p>There are no properties awaiting update approval.</p>
<?php endif ?>

<?php if ($numberAwaitingApproval > 0) : ?>
<table id="ist">
    <tr>
        <th>Property Id</th>
        <th>Type</th>
        <th>Action</th>
    </tr>
    <?php foreach ($this->propertyRowset as $row) : ?>
    <tr class="<?php echo $this->cycle(array("odd", "even"))->next() ?>">
        <td><?php echo $row->idProperty ?></td>
        <td><?php echo $this->propertyType($row->idPropertyType) ?></td>
        <td><a href="<?php echo $this->url(array('module' => 'admin', 'controller' => 'property', 'action' => 'view-update-approval', 'idProperty' => $row->idProperty)) ?>">[view]</a></td>
    </tr>
    <?php endforeach ?>
</table>
<?php endif ?>